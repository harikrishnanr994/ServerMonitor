server {
	listen 8080 default_server;
	listen [::]:8080 default_server;
	return 302 https://$host$request_uri;
}

server {
    listen 443 ssl; # managed by Certbot
		root /var/www/html;
		index index.html index.htm index.php;
		server_name 139.59.41.122 mymds.xyz www.mymds.xyz;
		location / {
		#try_files $uri $uri/ =404;
		try_files $uri $uri/ /index.php$is_args$args;
		}
		#includeSubDomains" always;
		location ~ \.php$ {
			include snippets/fastcgi-php.conf;
			fastcgi_pass unix:/run/php/php7.0-fpm.sock;
			}
		location ~ /\.ht {
			deny all;
			}
		location = /favicon.ico { log_not_found off; access_log off; }
	  location = /robots.txt { log_not_found off; access_log off; allow all; }
	  location ~* \.(css|gif|ico|jpeg|jpg|js|png)$ {
	         expires max;
	         log_not_found off;
	     }
		ssl_certificate /etc/letsencrypt/live/mymds.xyz/fullchain.pem; # managed by Certbot
		ssl_certificate_key /etc/letsencrypt/live/mymds.xyz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
